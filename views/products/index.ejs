<%- include('../partials/navbar') %>
<%- include('../partials/flash') %>
<% layout('layouts/boilerplate') %>

<div class="container mt-4">
    <div class="row">
        <% for (let item of products) { %>
            <div class="col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="<%= item.img %>" class="card-img-top" alt="<%= item.name %>">
                    <div class="card-body">
                        <h3 class="card-title"><%= item.name %></h3>
                        <h5 class="card-title">Rs. <%= item.price.toFixed(2) %></h5>
                        <p class="card-text"><%= item.desc %></p>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="/products/<%= item._id %>" class="btn btn-primary btn-sm">View Details</a>
                            <form action="/products/<%= item._id %>?_method=DELETE" method="POST" class="mt-2">
                                <button class="btn btn-danger btn-sm">Remove</button>
                            </form>
                           
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>

<style>
    .card {
        transition: transform 0.3s ease-in-out;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-img-top {
        height: 200px;
        object-fit: cover;
    }

    .card-title {
        font-size: 1.2rem;
        font-weight: bold;
    }

    .card-text {
        color: #6c757d;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }

    .btn-success {
        background-color: #3984da;
        border-color: #3984da;
    }

    .btn-success:hover {
        background-color: #1a5291;
        border-color: #1a5291;
    }

    .btn-danger {
        background-color: #1a5291;
        border-color: #1a5291;
    }

    .btn-danger:hover {
        background-color: #3984da;
        border-color: #3984da;
    }
</style>






